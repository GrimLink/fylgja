{
  "name": "fylgja",
  "version": "1.0.0",
  "description": "The modular CSS framework. Powered via CSS components",
  "homepage": "https://https://fylgja.dev/",
  "repository": "https://github.com/fylgja/fylgja",
  "bugs": "https://github.com/fylgja/fylgja/issues",
  "author": "Fylgja",
  "license": "MIT",
  "main": "_index.scss",
  "unpkg": "fylgja.css",
  "style": "fylgja.css",
  "keywords": [
    "fylgja",
    "css",
    "sass",
    "framework",
    "modular"
  ],
  "files": [
    "*.{css,scss}",
    "components/**/*.{css,scss,md}"
  ],
  "scripts": {
    "test": "stylelint components/**/*.scss",
    "build-css": "./scripts/build-css",
    "build-sass": "sass fylgja.scss fylgja.css --no-source-map -s compressed --load-path=node_modules",
    "prebuild": "npm test",
    "build": "npm run build-css && npm run build-sass"
  },
  "stylelint": {
    "extends": "@fylgja/stylelint-config/scss"
  },
  "dependencies": {
    "@fylgja/theme": "^0.1.0"
  },
  "devDependencies": {
    "@fylgja/stylelint-config": "^3.4.0",
    "sass": "^1.32.8",
    "stylelint": "^13.12.0"
  }
}
